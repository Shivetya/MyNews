<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.SearchActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_search_textinputlayout_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <EditText
            android:id="@+id/activity_search_edittext_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/keyword"
            android:inputType="text"
            android:importantForAutofill="no"
            tools:ignore="UnusedAttribute" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/linear_layout_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/activity_search_textinputlayout_keyword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="2"
        android:baselineAligned="false"
        android:layout_margin="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_search_textinputlayout_begin_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/begin_date"
                android:labelFor="@id/activity_search_edittext_begin_date"/>

            <EditText
                android:id="@+id/activity_search_edittext_begin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:importantForAutofill="no"
                tools:ignore="UnusedAttribute"
                android:focusableInTouchMode="false"
                android:focusable="false"
                style="?attr/spinnerStyle"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/activity_search_textinputlayout_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:labelFor="@id/activity_search_edittext_end_date"/>

            <EditText
                android:id="@+id/activity_search_edittext_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:importantForAutofill="no"
                tools:ignore="UnusedAttribute"
                android:focusableInTouchMode="false"
                android:focusable="false"
                style="?attr/spinnerStyle" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_arts_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arts"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_dates"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_business_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/business"
        app:layout_constraintTop_toBottomOf="@id/search_activity_checkbox_arts_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_entrepreneurs_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrepreneurs"
        app:layout_constraintTop_toBottomOf="@id/search_activity_checkbox_business_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_politics_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/politics"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_dates"
        app:layout_constraintLeft_toRightOf="@id/search_activity_checkbox_arts_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_sports_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sports"
        app:layout_constraintTop_toBottomOf="@id/search_activity_checkbox_politics_4"
        app:layout_constraintLeft_toRightOf="@id/search_activity_checkbox_arts_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/search_activity_checkbox_travel_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travel"
        app:layout_constraintTop_toBottomOf="@id/search_activity_checkbox_sports_5"
        app:layout_constraintLeft_toRightOf="@id/search_activity_checkbox_arts_1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_activity_button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_activity_checkbox_entrepreneurs_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/search_button"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        style="@style/Widget.MaterialComponents.Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>